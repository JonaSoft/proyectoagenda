<div class="row">
    {{#each notas}}
    <div class="col-lg-2 col-md-4">
        <div class="card  my-3">
            <div class="card-body">
                <h4 class="card-title text-dark d-flex justify-content-between align-items-center">
                    {{title}} <a href="notas/edit/{{_id}}"><i class ="fas fa-edit"></i></a> 
                </h4> 
                <p>{{description}}</p> 
                <p>{{date}}</p>
                <form action="/notas/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-warning btn-block btn-sm" type="submit">
                        Delete
                    </button>      
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h4> Usuario no tiene notas </h4>
            <a href="/notas/add" class="btn btn-success btn-block">Crear Nota</a> 
            </h4> 
        </div>
    </div>    
  {{/each}} 
</div>