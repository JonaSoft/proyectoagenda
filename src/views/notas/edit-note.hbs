<div class="col-md-4 mx-auto">
        <div class="card" style="margin-top:25%;">
            <div class="card-header">
                <h3>Edit Note!!!</h3>
                <div class="card-body">
                    <form action ="/edit/:{{notas._id}}?_method=PUT" method="POST" >
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text"class="form-control" name="title" class="form-control" placeholder="Titulo"
                            value="{{notas.title}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="form-control">{{notas.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="Submit">Save</button>
                        </div>  
                    </form>
                </div>
            </div>
        </div>
    </div>
